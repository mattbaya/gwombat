# GWOMBAT Local Development Configuration Template
# Copy this to .env and customize for your environment
# GWOMBAT: Google Workspace Optimization, Management, Backups And Taskrunner

# IMPORTANT: Never commit the actual .env file to version control!

# Deployment Configuration (for automated deployment to production)
SSH_KEY_PASSWORD="your-secure-ssh-key-password"
SSH_KEY_PATH="$HOME/.ssh/gwombatgit-key"

# Production Server Configuration
PRODUCTION_SERVER="your-production-server.edu"
PRODUCTION_USER="your-production-username"
GWOMBAT_PATH="/opt/path/to/gwombat"
PRODUCTION_PATH="${GWOMBAT_PATH}"
BARE_REPO_PATH="${GWOMBAT_PATH}.git"

# Optional: Additional deployment settings
DEPLOYMENT_BRANCH="main"
BACKUP_BEFORE_DEPLOY="false"

# Domain and Organization Configuration
DOMAIN="your-domain.edu"
ADMIN_EMAIL="gwombat@your-domain.edu"
ADMIN_USER="your-actual-admin@your-domain.edu"  # Your real admin user account

# Organizational Unit Paths (customize for your Google Workspace structure)
SUSPENDED_OU="/Suspended Users"
PENDING_DELETION_OU="/Suspended Users/Pending Deletion"
TEMPORARY_HOLD_OU="/Suspended Users/Temporary Hold"
EXIT_ROW_OU="/Suspended Users/Exit Row"

# Google Drive Configuration  
DRIVE_LABEL_ID="your-google-drive-label-id"

# GAM Configuration
GAM_PATH="/usr/local/bin/gam"
GAM_CONFIG_PATH="/home/your-username/.gam"

# Application Settings (optional)
SESSION_TIMEOUT="3600"
MAX_BATCH_SIZE="100"
PROGRESS_ENABLED="true"
CONFIRMATION_LEVEL="normal"
LOG_RETENTION_DAYS="30"
BACKUP_RETENTION_DAYS="90"

# Script Working Directories (relative to GWOMBAT installation)
SCRIPT_TEMP_PATH="./tmp"
SCRIPT_LOGS_PATH="./logs"

# Notification Settings (optional)
NOTIFICATION_ENABLED="false"
NOTIFICATION_EMAIL=""

# Development Settings (optional)
DEBUG_MODE="false"
VERBOSE_LOGGING="false"

# Python Environment Configuration
PYTHON_PATH="python3"
PYTHON_VERSION="unknown"
PYTHON_USE_VENV="false"
PYTHON_VENV_PATH=""
PYTHON_PACKAGES_INSTALLED="false"

# Setup Wizard Status
SETUP_COMPLETED="false"