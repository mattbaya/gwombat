# GAMadmin Deployment Environment Variables
# Copy this file to .env and fill in your values

# SSH Key Configuration for Git Deployments
SSH_KEY_PASSWORD="your-secure-password-here"
SSH_KEY_PATH="$HOME/.ssh/gamadmingit-key"

# Production Server Configuration
PRODUCTION_SERVER="gamera2.your-domain.edu"
PRODUCTION_USER="gamadmin"
GAMADMIN_PATH="/opt/gamera/mjb9/gamadmin"
PRODUCTION_PATH="${GAMADMIN_PATH}"
BARE_REPO_PATH="${GAMADMIN_PATH}.git"

# Optional: Additional deployment settings
DEPLOYMENT_BRANCH="main"
BACKUP_BEFORE_DEPLOY="false"

# Domain and Organization Configuration
DOMAIN="yourdomain.edu"
ADMIN_EMAIL="admin@yourdomain.edu"

# Organizational Unit Paths (customize for your domain)
SUSPENDED_OU="/Suspended Users"
PENDING_DELETION_OU="/Suspended Users/Pending Deletion"
TEMPORARY_HOLD_OU="/Suspended Users/Temporary Hold"
EXIT_ROW_OU="/Suspended Users/Exit Row"

# Google Drive Configuration  
DRIVE_LABEL_ID="your-drive-label-id"

# GAM Configuration
GAM_PATH="/usr/local/bin/gam"
GAM_CONFIG_PATH="/home/admin/.gam"