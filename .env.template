# GAMadmin Deployment Environment Variables
# Copy this file to .env and fill in your values

# SSH Key Configuration for Git Deployments
SSH_KEY_PASSWORD="your-secure-password-here"
SSH_KEY_PATH="$HOME/.ssh/gamadmingit-key"

# Production Server Configuration
PRODUCTION_SERVER="gamera2.your-domain.edu"
PRODUCTION_USER="gamadmin"
GAMADMIN_PATH="/opt/gamera/mjb9/gamadmin"
PRODUCTION_PATH="${GAMADMIN_PATH}"
BARE_REPO_PATH="${GAMADMIN_PATH}.git"

# Optional: Additional deployment settings
DEPLOYMENT_BRANCH="main"
BACKUP_BEFORE_DEPLOY="false"